<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>true</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*user_gtu_validations</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<unsigned>true</unsigned>
				<length>4</length>
			</field>			
			<field>
				<!-- Set up an index on this-->
				<name>uid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>gtu_version</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>4</length>
			</field>
			<field>
				<name>validation_date</name>
				<type>numeric</type>
				<notnull>true</notnull>
			</field>
		</declaration>
	</table>
</database>